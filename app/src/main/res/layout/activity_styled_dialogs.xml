<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.stfalcon.chatkit.dialogs.DialogsList
        android:id="@+id/dialogsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        app:dialogMessageTextSize="17sp"
        app:dialogTitleTextStyle="bold"
        app:dialogUnreadBubbleBackgroundColor="#FF0000"
        app:dialogUnreadItemBackground="#A6EFEFEF"
        app:dialogUnreadTitleTextStyle="bold"
        app:dialogDateColor="@color/textColorPrimary"
        app:dialogMessageTextColor="@color/textColorPrimary"
        app:dialogTitleTextColor="@color/colorAccent"
        app:dialogItemBackground="@color/colorPrimaryDark" />

</RelativeLayout>
