<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.teamcaffeine.hotswap.navigation.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtItemsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Items" />

    <ListView
        android:id="@+id/listviewAllItems"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/txtRentingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently Renting" />

    <TextView
        android:id="@+id/txtCurrentlyRenting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="Renting 1 Item" />

    <TextView
        android:id="@+id/txtLendingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently Lending" />

    <ListView
        android:id="@+id/listviewLending"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btnListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Item" />
</LinearLayout>
